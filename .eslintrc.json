{
    "root": true,
    "extends": ["plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": [],
    "rules": {
        "no-const-assign": "error",
        "no-extra-semi": "error",
        "no-unreachable": "error"
        // "sort-imports": "error"
    },
    "parserOptions": {
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "impliedStrict": true
        },
        "sourceType": "module"
    }
}
